@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div>
            <fieldset>
                <legend><b>Register</b></legend>
                
                <form action="/register" method="post">
                    <label for="FirstName">First Name:</label>
                    <input type="text" id="FirstName" name="FirstName">
                    <label for="LastName">Last Name:</label>
                    <input type="text" id="LastName" name="LastName">
                    <label for="Email">Email:</label>
                    <input type="textarea" id="Email" name="Email">
                    <label for="Password">Password:</label>
                    <input type="Password" id="Password" name="Password">
                    <label for="PW">Confirm Password:</label>
                    <input type="Password" name="PW" id="PW">
                    <input class="btn btn-info" type="submit" value="Register">
                </form>
            </fieldset>
        </div>
            
        <div>
            <legend><b>Sign In</b></legend>
            
            <form action="/signin" method="post">
                <label for="Email">Emaill:</label>
                <input type="textarea" id="Email" name="Email">
                <label for="Password">Password:</label>
                <input type="Password" id="Password" name="Password">
                
                <input class="btn btn-info" type="submit" value="Login">
            </form>
            <h3>@ViewBag.Message</h3>
        </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 messages">
            @if (ViewBag.Status == true) {
                @foreach(var error in ViewBag.Errors) {
                    if (@error.Errors.Count > 0 ) {
                        <h3>@error.Errors[0].ErrorMessage</h3>
                    }
                }
            }
        </div>
    </div>
</div>
